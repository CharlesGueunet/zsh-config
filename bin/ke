#!/bin/sh

#fix for vifm
if [[ "$1" == "-f" ]]; then
  shift
fi

if [ "$#" -eq 1 ] && ! [ -f "$1" ]; then
  touch "$1"
fi

if [ -v KKS_SESSION ]; then
  kks edit -s $KKS_SESSION "$@"
else
  # not attached to session
  if [[ -z "$@" ]]; then
    kak "$@"
  else
    for f in $@; do
      kak "$f"
    done
  fi
fi
