#!/bin/sh

#fix for vifm
if [[ "$1" == "-f" ]]; then
  shift
fi

if [ "$#" -eq 1 ] && ! [ -f "$1" ]; then
  echo "create $1"
  touch "$1"
fi

if [ -v KKS_SESSION ]; then
  kks edit -s $KKS_SESSION "$@"
else
  # not attached to session
  if [ -d "$@" ]; then
    vifm "$@"
  else
    kak "$@"
  fi
fi
